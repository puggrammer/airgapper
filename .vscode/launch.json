    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug Pytest with Arguments",
            "type": "python",
            "request": "launch",
            // "program": "${workspaceFolder}/path/to/your/tests", 
            "module": "pytest",
            "args": [
                "-rp",
                "${file}",
                "-k",
                "test_mvn_ul_pom_pass"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}